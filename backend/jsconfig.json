{
	"compilerOptions": {
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"target": "ES2022",
		"jsx": "react",
		"allowSyntheticDefaultImports": true,
		"baseUrl": ".",
		"paths": {
			"*": ["*"]
		},
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"checkJs": true,
		"strict": false
	},
	"include": ["**/*.js", "**/*.mjs"],
	"exclude": ["node_modules", "**/node_modules/*", "dist", "build"]
}
